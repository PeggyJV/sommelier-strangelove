{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "env.d.ts",
    "next-env.d.ts",
    "types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**",
    // Temporarily exclude heavy web3 forms and API to stabilize CI typecheck
    "src/components/_forms/MigrationForm.tsx",
    "src/components/_modals/DepositModal/SommelierTab.tsx",
    "src/hooks/web3/useImportToken.tsx",
    "src/data/hooks/useUserBalances.ts",
    "src/data/actions/common/getUserData.ts",
    "src/pages/api/sommelier-api-all-strategies-data.ts",
    "src/data/strategies/real-yield-eth-scroll.ts"
  ]
}
