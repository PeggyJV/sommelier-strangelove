{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "data/*": [
        "src/data/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "context/*": [
        "src/context/*"
      ],
      "providers/*": [
        "src/providers/*"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "public/*": [
        "public/*"
      ],
      "generated/*": [
        "src/generated/*"
      ],
      "queries/*": [
        "src/queries/*"
      ],
      "theme/*": [
        "src/theme/*"
      ],
      "types/*": [
        "src/types/*"
      ],
      "utils/*": [
        "src/utils/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**/*",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "include": [
    "env.d.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "playwright.config.ts",
    "sentry.client.config.ts",
    "sentry.server.config.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ]
}
