{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "data/*": ["src/data/*"],
      "components/*": ["src/components/*"],
      "context/*": ["src/context/*"],
      "providers/*": ["src/providers/*"],
      "hooks/*": ["src/hooks/*"],
      "pages/*": ["src/pages/*"],
      "public/*": ["public/*"],
      "generated/*": ["src/generated/*"],
      "queries/*": ["src/queries/*"],
      "theme/*": ["src/theme/*"],
      "types/*": ["src/types/*"],
      "utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "types.d.ts"
  ]
}
