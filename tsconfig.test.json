{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/__tests__/**/*"],
  "exclude": ["node_modules", ".next", "coverage"]
}

